{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "prettier",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "browser": true,
    "es2021": true
  },

  "rules": {
    "no-console": 1,
    "prettier/prettier": ["error"] // if you choose to use prettier rules.
    /*
      "off" means 0 (turns the rule off completely)
      "warn" means 1 (turns the rule on but won't make the linter fail)
      "error" means 2 (turns the rule on and will make the linter fail)
    */
  }
}
