{
  "name": "brobot",
  "version": "21.7.0",
  "description": "Running on AWS EC2 instance for api and bouncer",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "npx jest --watch",
    "dev": "concurrently \"tsc -w\" \"pm2 kill && pm2 startOrRestart ecosystem.config.cjs --env development --watch\"",
    "prod": "concurrently \"tsc -w\" \"pm2 kill && pm2 startOrRestart ecosystem.config.cjs --env production --watch\"",
    "deploy": "pm2 deploy ecosystem.config.cjs production",
    "lint": "eslint . --ext .ts",
    "stage": "echo \"No script just yet\"",
    "prepare": "husky install",
    "preserve": "npm run build",
    "format": "prettier --write src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TahaBilalCS/brobot.git"
  },
  "author": "Brother Bill",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TahaBilalCS/brobot/issues"
  },
  "homepage": "https://github.com/TahaBilalCS/brobot#readme",
  "dependencies": {
    "@twurple/auth": "^5.0.5",
    "@twurple/chat": "^5.0.5",
    "@twurple/eventsub": "^5.0.5",
    "@types/express": "^4.17.13",
    "@types/node": "^16.3.3",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "mongoose": "^6.0.10",
    "passport": "^0.4.1",
    "passport-oauth": "^1.0.0",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@types/cookie-session": "^2.0.43",
    "@types/cors": "^2.8.12",
    "@types/jest": "^26.0.24",
    "@types/passport": "^1.0.7",
    "@types/request": "^2.48.7",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "concurrently": "^6.2.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.13",
    "pm2": "^5.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --check"
    ]
  }
}
