{
  "name": "backendbill",
  "version": "21.7.0",
  "description": "Running on AWS EC2 instance for api and bouncer",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "preserve": "npm run build",
    "dev": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "prod": "cross-env NODE_ENV=production concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "test": "echo \"No tests just yet\"",
    "deploy": "pm2 deploy ecosystem.config.js production",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TahaBilalCS/BackendBill.git"
  },
  "author": "Brother Bill",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TahaBilalCS/BackendBill/issues"
  },
  "homepage": "https://github.com/TahaBilalCS/BackendBill#readme",
  "dependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/express": "^4.17.13",
    "@types/node": "^16.3.3",
    "body-parser": "^1.19.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "concurrently": "^6.2.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.12",
    "pm2": "^5.1.0",
    "prettier": "^2.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "./node_modules/.bin/eslint .",
      "git add"
    ],
    "*.{html,css,less,ejs}": [
      "prettier --write",
      "git add"
    ]
  }
}
